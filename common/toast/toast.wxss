  min-height: 200rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -61.8%);
          transform: translate(-50%, -61.8%);
  z-index: 100;
  display: -webkit-box;
  display: -webkit-flex;
